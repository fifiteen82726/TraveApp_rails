<div class="tags">
  <div class="container">
    <div class="cards row">
    
      <!--
      To do: Loop through tags and display each one with this HTML
      <div class="card col-xs-4">
        tag's image goes here
        <h2> tag's title goes here </h2>
      </div>
      -->

     
      

      <% @tags.each do |t| %>
        <div class ="col-xs-4">
          <%= image_tag t.image %>

        </div>
        <h2><%= t.title %></h2>
        <%= link_to "link text...", tag_path(t) %>
       <% end %>



    </div>
  </div>
</div>
